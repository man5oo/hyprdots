element {
    border:  0;
    border-color: @teal;
    padding: 5px;
    border-radius: 10px;
    horizontal-align: 0.5;
}
element.selected.normal {
    background-color: @base;
    text-color:       @selected-normal-foreground;
    border: 1;
    border-color: @teal;
}
